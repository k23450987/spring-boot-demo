[*]
charset=utf-8
end_of_line=crlf
indent_style=space
indent_size=4
insert_final_newline=true
trim_trailing_whitespace=true

[{*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=space
indent_size=4

[{*.mod,*.dtd,*.ent,*.elt}]
indent_style=space
indent_size=4

[{*.jhm,*.xslt,*.xul,*.svg,*.rng,*.xsl,*.xsd,*.ant,*.wadl,*.tld,*.fxml,*.jrxml,*.xml,*.jnlp,*.wsdl,*.wsdd,*.pom,*.xjb}]
indent_style=space
indent_size=4

[{.babelrc,.stylelintrc,.eslintrc,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style=space
indent_size=4

[*.java]
indent_style=space
indent_size=4

[*.css]
indent_style=space
indent_size=4

[{*.applejs,*.js}]
indent_style=space
indent_size=4

[{*.gy,*.gant,*.groovy,*.gdsl}]
indent_style=space
indent_size=4

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

[*.md]
indent_style=space
indent_size=2
trim_trailing_whitespace=false
